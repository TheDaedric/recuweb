<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Facturar</title>
  <style>
      body {
        background-image: url("https://wallpaperplay.com/walls/full/4/0/4/33404.jpg");
      } 
      
      </style>
</head>
  <body>
  
    <div>
       <nav>
        
          <div >
              <a href="/clientes">Clientes</a>
          </div>
          <div>
              <a href="/mecanico_responsable">Mecanicos</a>
          </div>
          <div>
              <a href="/repuestos">Refacciones</a>
          </div>
          <div>
              <a href="/factura">Transaccion</a>
          </div>
        </div>
     
      </nav>

      <div>

        
        <div>
          <h1 align="center">Facturas</h1>
          <div>
              <div>
                <div>
                  
                  <div align="center">
                    <a href="/factura/crear">Crear factura</a>
                  </div>
                </div>
              </div>
          </div>
            <div>
              <div align="center">
                <h3>Clientes</h3>
                <br>
              </div>
                <table align="center" border="1">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Fecha</th>
                      <th>Importe en pesos</th>
                      <th>Importes en dolares</th>
                      <th>RFC</th>
                    </tr>
                  </thead>
                  <tbody>
                    @each(factura in facturas)
                      <tr>
                        <td>{{factura.id}}</td>
                        <td>{{factura.fecha}}</td>
                        <td>{{factura.imp_pesos}}</td>
                        <td>{{factura.imp_dol}}</td>
                        <td>{{factura.rfc}}</td>
                        <td></td>
                        <td>
                          <li>
                            <a href="/factura/eliminar/{{factura.id}}">Eliminar</a>
                          </li>
                        </td>
                        </td>
                      </tr>
                    @endeach
                  </tbody>
              </table>
            </div>
        </div>
      </div>

    </div>
  </body>
</html>
